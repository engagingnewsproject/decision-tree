<section id="enp-tree--{{{tree_id}}}" class="enp-tree enp-tree--{{{environment}}}">
    <div class="enp-tree__intro">
        <h2 class="enp-tree__title enp-tree__title--tree">{{{title}}}</h2>
        {{#if starts}}
            {{#each starts}}
                <div class="enp-tree__start-container">
                    <p><a class="enp-tree__start" href="#enp-tree__destination--{{{destination_id}}}">{{{title}}}</a></p>
                    {{#if content}}
                        <div class="enp-tree__description enp-tree__description--start">
                            {{content}}
                        </div>
                    {{/if}}
                </div>
            {{/each}}
        {{/if}}
    </div>

    {{#if questions}}
        {{#each questions}}
            {{#if group_id}}
                {{#group_start question_id group_id ../groups}}
                    <div class="enp-tree__group">
                        <h3 class="enp-tree__title enp-tree__title--group">{{.}}</h3>
                {{/group_start}}
            {{/if}}
            <section id="enp-tree__destination--{{{question_id}}}" class="enp-tree__question" >
                <h4 class="enp-tree__title enp-tree__title--question">{{title}}</h4>
                {{#if content}}
                    <div class="enp-tree__description enp-tree__description--question">{{content}}</div>
                {{/if}}
                {{#if options}}
                    <ul class="enp-tree__options">
                        {{#each options}}
                            <li id="enp-tree__option--{{{option_id}}}" class="enp-tree__option"><a class="enp-tree__option-link"  href="#enp-tree__destination--{{{destination_id}}}">{{title}}</a></li>
                        {{/each}}
                    </ul>
                {{/if}}
            </section>

            {{#if group_id}}
                {{#group_end question_id group_id ../groups}}
                    </div>
                {{/group_end}}
            {{/if}}
        {{/each}}
    {{/if}}

    {{#if ends}}
        {{#each ends}}
            <section id="enp-tree__destination--{{{end_id}}}" class="enp-tree__end">
                <p>End</p>
                <h3 class="enp-tree__title enp-tree__title--end">{{{title}}}</h3>
                {{#if content}}
                    <div class="enp-tree__description enp-tree__description--end">{{content}}</div>
                {{/if}}
                <a class="enp-tree__btn enp-tree__btn--retry" href="#enp-tree--{{{../tree_id}}}">Start Again</a>
            </section>
        {{/each}}
    {{/if}}


</section>
